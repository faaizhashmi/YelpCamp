<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" name="name" type="text" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" name="price" type="number" placeholder="price" min="0.01" step="0.01" >
            </div>
            <div class="form-group">
                <input class="form-control" name="image" type="text" placeholder="imageurl">
            </div>
            <div class="form-group">
                <input class="form-control" name="description" type="text" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>    
        </div>
    </div>
</div>
       

