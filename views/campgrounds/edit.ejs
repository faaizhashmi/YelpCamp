<% include ../partials/header.ejs %>
<h1>Edit <%=campgrounds.name%>!!!</h1>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/campgrounds/<%=campgrounds._id%>?_method=PUT">
            <div class="form-group">
                <input class="form-control" name="campgrounds[name]" type="text" value="<%=campgrounds.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campgrounds[price]" type="number"  value="<%=campgrounds.price%>" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" name="campgrounds[image]" type="text" value="<%=campgrounds.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campgrounds[description]" type="text" value="<%=campgrounds.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>    
        </div>
    </div>
</div>
       

<% include ../partials/footer.ejs %>